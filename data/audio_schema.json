{
  "audio_schema": {
    "version": "1.0",
    "description": "Audio intent schema for procedural TTS-based sound synthesis"
  },

  "event_types": [
    "ambient",
    "sfx",
    "music_motif",
    "ui_feedback",
    "dialogue",
    "environmental"
  ],

  "emotions": [
    "neutral",
    "tense",
    "triumphant",
    "mysterious",
    "danger",
    "peaceful",
    "comedic",
    "horror",
    "epic",
    "melancholy"
  ],

  "styles": [
    "comic_noir",
    "fantasy_epic",
    "horror_whisper",
    "retro_8bit",
    "ambient_drone",
    "percussive",
    "melodic"
  ],

  "onomatopoeia_library": {
    "combat": {
      "sword_hit": ["CLANG", "SHING", "KRRRANG", "SHHHK", "SLASH"],
      "blunt_hit": ["THWACK", "KRUNCH", "THUD", "WHAM", "BONK"],
      "magic_cast": ["FWOOSH", "ZZZAP", "CRACKLE", "WHOOOM", "SHIMMER"],
      "magic_hit": ["KRAKOOM", "ZZRRKT", "BOOM", "SIZZLE", "PZZZOW"],
      "arrow": ["THWIP", "WHOOSH", "THUNK", "ZING"],
      "block": ["CLANK", "TING", "KRANG"],
      "miss": ["SWISH", "WHOOSH", "FWIP"],
      "critical": ["KA-BOOM", "KRAKATHOOM", "MEGA-KRUNCH"],
      "death": ["SPLORCH", "THUD", "CRASH", "AAAGH"]
    },
    "movement": {
      "footsteps_stone": ["tap tap tap", "clack clack", "tok tok tok"],
      "footsteps_water": ["splish splash", "sploosh", "drip drop"],
      "footsteps_wood": ["creak", "thump thump", "clonk clonk"],
      "door_open": ["CREEEAK", "KA-CHUNK", "GROOOOAN", "click-CLACK"],
      "door_close": ["THUD", "SLAM", "click"],
      "climbing": ["scrrrrape", "grunt... hup", "scramble"],
      "falling": ["WHOOOOSH", "AAAA", "CRASH"],
      "swimming": ["splash splash", "glub glub", "swoosh"]
    },
    "environment": {
      "wind": ["whoooooosh", "howwwwl", "shhhhhhh"],
      "water_drip": ["drip... drip...", "plink... plink...", "plop"],
      "fire": ["crackle crackle", "FWOOSH", "roooar"],
      "thunder": ["KRAKA-BOOM", "RUMMMBLE", "CRACK"],
      "cave_echo": ["...echo... echo...", "drip... drip...", "whooooo"],
      "forest": ["rustle rustle", "chirp chirp", "creeeak"],
      "dungeon": ["clank... clank...", "moan...", "drip drip"],
      "temple": ["hummmmm", "ting... ting...", "whoooosh"]
