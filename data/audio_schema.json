    "items": {
      "pickup_coin": ["CHING", "clink clink", "ka-ching"],
      "pickup_item": ["shwoop", "ting!", "swoosh"],
      "drop_item": ["clatter", "thunk", "plop"],
      "equip": ["SHING", "click-CLACK", "shwooop"],
      "potion_drink": ["glug glug glug", "GULP", "ahhhhh"],
      "scroll_read": ["crinkle crinkle", "fwoooosh", "hmmmm"],
      "chest_open": ["CREEEAK... ka-chunk", "CLICK... creeeak", "ratttle... THUNK"]
    },
    "ui": {
      "menu_open": ["fwip", "swoosh", "pop"],
      "menu_close": ["fwup", "click", "snap"],
      "select": ["tick", "pip", "ting"],
      "confirm": ["ding!", "ta-da!", "TING"],
      "cancel": ["bwop", "nope", "tsk"],
      "error": ["BZZZT", "boop boop", "nuh-uh"],
      "level_up": ["TA-DA-DAAAA", "DING DING DING", "WHOOOOSH-TING"]
    },
    "music_motifs": {
      "exploration": ["doo doo doo...", "hmmm hmmm hmm...", "la la laaa..."],
      "tension": ["dun... dun... DUN...", "tick... tick... tick...", "bum... bum... BUM..."],
      "combat": ["DUN DUN DUN DUN", "CRASH BANG BOOM", "da-da-DA-DA"],
      "victory": ["da-da-da-DAAAA!", "TING-a-ling-ling!", "ta-da-da-DAAA!"],
      "defeat": ["wah wah wahhhhh", "dun dun dunnnnn...", "..."],
