    "npc": {
      "greeting": ["ahem", "oh!", "hmm?"],
      "farewell": ["hmph", "bye-bye", "..."],
      "laugh": ["ha ha ha", "heh heh", "HO HO HO"],
      "angry": ["GRRR", "HMPH", "tsk tsk"],
      "surprised": ["GASP", "oh my!", "what?!"],
      "sad": ["sigh...", "sniff", "oh..."]
    }
  },

  "processing_presets": {
    "cave": {
      "reverb": 0.8,
      "delay": 0.4,
      "lowpass": 2000,
      "echo_decay": 0.6
    },
    "dungeon": {
      "reverb": 0.5,
      "delay": 0.2,
      "lowpass": 3000,
      "distortion": 0.1
    },
    "temple": {
      "reverb": 0.9,
      "delay": 0.5,
      "highpass": 200,
      "chorus": 0.3
    },
    "forest": {
      "reverb": 0.3,
      "delay": 0.1,
      "lowpass": 8000
    },
    "combat": {
      "reverb": 0.2,
      "compression": 0.8,
      "distortion": 0.2,
      "punch": true
    },
    "ethereal": {
      "reverb": 0.95,
      "delay": 0.6,
      "pitch_shift": 0.5,
      "shimmer": true
    },
    "retro": {
      "bitcrush": 8,
      "lowpass": 4000,
      "distortion": 0.3
    }
  },

  "intensity_mappings": {
    "pitch": {
      "0.0": -12,
      "0.5": 0,
      "1.0": 12
    },
    "speed": {
      "0.0": 0.5,
      "0.5": 1.0,
      "1.0": 2.0
    },
    "volume": {
      "0.0": 0.2,
      "0.5": 0.6,
      "1.0": 1.0
    }
  }
}
